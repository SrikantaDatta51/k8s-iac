        {
            "id": 2,
            "title": "Node Availability (SLA)",
            "description": "(total_minutes - downtime_minutes) / total_minutes \u00d7 100. Target: \u2265 99.9%.",
            "type": "gauge",
            "datasource": {
                "type": "prometheus",
                "uid": "${datasource}"
            },
            "gridPos": {
                "h": 6,
                "w": 6,
                "x": 0,
                "y": 1
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percentunit",
                    "decimals": 1,
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "#C04040",
                                "value": null
                            },
                            {
                                "color": "#E0A939",
                                "value": 0.995
                            },
                            {
                                "color": "#56A64B",
                                "value": 0.999
                            }
                        ]
                    },
                    "min": 0,
                    "max": 1
                },
                "overrides": []
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                },
                "showThresholdLabels": false,
                "showThresholdMarkers": true
            },
            "targets": [
                {
                    "refId": "A",
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${datasource}"
                    },
                    "expr": "avg_over_time(avg(bcm_device_is_up{cluster=~\"$cluster\"})[30d:5m])",
                    "legendFormat": "Node Availability",
                    "instant": true
                }
            ]
        },
        {
            "id": 3,
            "title": "GPU Availability",
