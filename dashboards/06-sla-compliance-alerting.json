            "gridPos": {
                "h": 6,
                "w": 6,
                "x": 6,
                "y": 1
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percentunit",
                    "decimals": 1,
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "#C04040",
                                "value": null
                            },
                            {
                                "color": "#E0A939",
                                "value": 0.99
                            },
                            {
                                "color": "#56A64B",
                                "value": 0.995
                            }
                        ]
                    },
                    "min": 0,
                    "max": 1
                },
                "overrides": []
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                },
                "showThresholdLabels": false,
                "showThresholdMarkers": true
            },
            "targets": [
                {
                    "refId": "A",
                    "datasource": {
                        "type": "prometheus",
                        "uid": "${datasource}"
